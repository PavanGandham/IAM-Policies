{
    "Version":"2012-10-17",
    "Statement":[
        {
            "Sid":"EC2-Describe-Allow",
            "Effect":"Allow",
            "Action":"ec2:Describe*",
            "Resource":"*"
        },
        {
            "Sid":"EC2-Actions-Deny",
            "Effect":"Deny",
            "Action":[
                "ec2:StartInstances",
                "ec2:StopInstances",
                "ec2:RebootInstances"
            ],
            "Resource":[
                "arn:aws:ec2:us-east-1:625220728704:instance/*"
            ],
            "Condition":{
                "StringEquals":{
                    "ec2:ResourceTag/Env":"Test"
                }
            }
        }
    ]
}